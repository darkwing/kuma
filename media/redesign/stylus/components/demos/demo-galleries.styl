/* Demo Galleries */
#page-head {
  clear: both;
  margin: 0 0 20px;
}
#page-head:after {
  content: ".";
  clear: both;
  display: block;
  height: 0;
  visibility: hidden;
}
#page-head h1,
#page-head h2,
#page-head li {
  margin: 0 0 0.25em;
}
#page-head p,
#page-head ul,
#page-head ol {
  margin: 0 0 0.5em;
}
#page-head.gallery .main,
#page-head.gallery .author,
#page-head.gallery .learn {
  min-height: 90px;
  background-color: #fff;
  background-color: rgba(255,255,255,0.8);
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  border-radius: 5px;
  -moz-box-shadow: 1px 1px 4px rgba(0,0,0,0.2);
  -webkit-box-shadow: 1px 1px 4px rgba(0,0,0,0.2);
  box-shadow: 1px 1px 4px rgba(0,0,0,0.2);
}
#page-head.gallery .main {
  width: 500px;
  padding: 30px 140px 30px 40px;
  overflow: hidden;
  position: relative;
  float: left;
}
#page-head.gallery .page-title {
  color: #861215;
  font: 200 34px/1 "Bebas Neue", "League Gothic", "Arial Narrow", Arial, Helvetica, sans-serif;
  letter-spacing: 1px;
  text-transform: uppercase;
}
#page-head.gallery .page-title img {
  position: absolute;
  right: -15px;
  top: 0;
}
#page-head.gallery .learn {
  width: 200px;
  float: right;
  padding: 18px;
}
#page-head.gallery .learn ul {
  color: #861215;
  list-style: disc;
  margin: 0 0 0 10px;
  text-transform: uppercase;
}
#page-head.gallery .learn h2 {
  margin: -10px -10px 15px;
  border-radius: 4px;
  padding: 0.75em 10px;
  color: #fff;
  font-size: 1em;
  text-align: center;
  text-transform: uppercase;
  background-image: none;
  background: #000;
  background: -moz-linear-gradient(top, #333 0, #000 100%);
  background: -webkit-linear-gradient(top, #333 0, #000 100%);
  background: linear-gradient(top, #333 0, #000 100%);
}
#page-head.gallery a:link {
  color: #861215;
}
#page-head.gallery a:visited {
  color: #9a3f42;
}
#page-head.gallery a:hover,
#page-head.gallery a:focus,
#page-head.gallery a:active {
  color: #b2181c;
}
#page-head.gallery .author {
  padding: 30px 160px;
  position: relative;
}
#page-head.gallery .author .avatar {
  left: 30px;
  top: 30px;
  background: #fff;
  padding: 5px;
  -moz-box-shadow: 3px 3px 0 rgba(0,0,0,0.1);
  -webkit-box-shadow: 3px 3px 0 rgba(0,0,0,0.1);
  box-shadow: 3px 3px 0 rgba(0,0,0,0.1);
}
#page-head.gallery .author .edit {
  width: 140px;
  position: absolute;
  right: 30px;
  top: 30px;
  text-align: right;
}
#page-head.gallery .author .edit .button {
  color: #fff;
}

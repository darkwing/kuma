/* Buttons */

.section-demos main button,
.section-demos main .button {
  display: inline-block;
  padding: 0.35em 14px 0.25em;
  border: 1px solid #8f4d4f;
  border-color: rgba(255,255,255,0.2);
  font: 1em/1 "Bebas Neue", "League Gothic", "Arial Narrow", sans-serif;
  letter-spacing: 0.05em;
  text-decoration: none;
  background: #861215 url("/media/img/button-shade.png") 0 0.85em repeat-x;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  border-radius: 5px;
  -moz-box-shadow: inset 0 0 3px rgba(180,0,0,0.5), 1px 1px 3px rgba(0,0,0,0.4);
  -webkit-box-shadow: inset 0 0 3px rgba(180,0,0,0.5), 1px 1px 3px rgba(0,0,0,0.4);
  box-shadow: inset 0 0 3px rgba(180,0,0,0.5), 1px 1px 2px rgba(0,0,0,0.4);
  -moz-transition: background-color 0.2s;
  -webkit-transition: background-color 0.2s;
  -o-transition: background-color 0.2s;
  transition: background-color 0.2s;
}

.section-demos main button:hover,
.section-demos main button:focus,
.section-demos main button:active,
.section-demos main .button:hover,
.section-demos main .button:focus,
.section-demos main .button:active {
  background-color: #b2181c;
  text-decoration: none;
  -moz-transition: background-color 0.1s;
  -webkit-transition: background-color 0.1s;
  -o-transition: background-color 0.1s;
  transition: background-color 0.1s;
}

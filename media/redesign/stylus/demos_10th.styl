@require 'includes/mixins';
@require 'includes/vars';

#demostudio.landing {
  background: #00101b url("/media/img/demos/10th/bg-demolanding.jpg") center top no-repeat;
}

#demostudio.detail {
  background: #00101b url("/media/img/demos/10th/bg-demodetail.jpg") center top no-repeat;
}

.section-demos {
  background: #00101b url("/media/img/demos/10th/bg-demostudio.jpg") center top no-repeat;
}

#demostudio.landing .demo,
#demostudio.landing .demo .stats {
    color: #fff;
    vendorize(transition, color 0.2s 0.2s);
}

#demostudio.landing .demo:hover,
#demostudio.landing .demo:hover .stats,
.demo .byline a {
    color: inherit;
}

#demo-main,
#featured-demos .side,
#demobox .demo-preview {
    background-image: none;
    background-color: #000;
    border: 4px solid #fff;
    border-radius: 2px;
    padding: 0;
    border-radius: 6px;
    box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4), 0px 21px 14px -10px rgba(0, 0, 0, 0.5);

    img.preview {
        border-radius: 4px;
    }
}

#featured-demos header h2 {
    background-image: none;
}

#demo-main {
    margin-left: -218px;
    overflow: hidden;
    width: 435px;
    height: 326px;

    .demo-details {
        left: 14px;
    }
}

/* Buttons */
.section-demos main button
.section-demos main .button {
    &, &:hover, &:active, &:focus {
        border: 0;
        cursor: pointer;
        display: inline-block;
        line-height: 1;
        font-weight: normal;
        letter-spacing: normal;
        text-transform: uppercase;
        padding: 5px 11px;
        border-radius: 4px;
        color: #fff;
        text-decoration: none;
        background-color: #0095dd;
        background-image: none;
        box-shadow: inset 0 -1px #00539f;
    }

    &:hover, &:active, &:focus {
        text-decoration: underline;
    }
}

#demo-manage {
    margin-bottom: $grid-spacing;
}

#demo-manage .remove {
    background-color: #ea3b28;
    color: #fff;
}

#demo-manage .remove:hover,
#demo-manage .remove:focus,
#demo-manage .remove:active,
#demo-manage button:hover .remove,
#demo-manage button:focus .remove {
    background-color: #ea3b28;
    color: #fff;
    text-decoration: underline;
}

#demo-manage .edit {
    background-color: $button-background;
    color: $button-color;

    &:hover, &:focus, &:active {
        background-color: $button-background;
        color: $button-color;
    }
}

.demo-buttons .submit b {
    display: none;
}

.section-demos .gallery-head .count {
    background-image: none;
    padding-left: 0;
}

#page-head .page-title {
    color: inherit;
}

.module .mod-title {
    background-image: none;
}

#page-head .learn ul {
    color: $text-color;
}

.section-demos .gallery-head .sort strong {
    color: $link-color;
    background-image: url("/media/img/demos/10th/sort-arrow.png");
}

.demo .demo-title a img {
    border-radius: 4px;
}

.demo .demo-title a, .demo .descLink {
    color: $link-color !important;
}

.section-demos .gallery-foot .paging a, .demo .descLink, .section-demos .gallery-head .sort a {
    &:hover, &:active, &:focus {
        color: $link-color;
    }
}

.section-demos .icon-user {
    color: #fff;
}

#search-browse {
    background: none;
}

.section-demos .gallery-foot .paging a {
    background-image: url("/media/img/demos/10th/paging-arrows.png");
}

#demo-report,
#demo-report h3 {
    color: #fff;
}

#comments a, #demo-sub a, #page-head a {
    &, &:visited, &:hover, &:active, &:focus {
        color: $link-color;
    }
}

.demo-terms {
    color: #fff;

    @media print {
        color: $text-color;
    }
}


@media $media-query-tablet {
    #demobox .screenshots.multi-images .nav-slide {
        .next, .prev {
            transform: scale(0.5);
            -webkit-transform: scale(0.5);
            display: block !important;
            outline: 0;
            background-color: transparent;
            -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
        }

        .prev {
            left: -10px !important; /* overriding the JS widget :/ */
        }

        .next {
            right: -10px !important; /* overriding the JS widget :/ */
        }
    }
}


@media $media-query-mobile {

    #demostudio.landing {
      background-image: url("/media/img/demos/10th/bg-demolanding-low.jpg");
    }

    #featured-demos header h2 {
        font-size: 24px;
    }
}

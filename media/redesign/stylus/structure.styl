/* animation for search */
@keyframes searchBoxExpand {
	to {
		width 500px
		background pink
	}
}
@keyframes searchBoxExpandBack {
	to {
		width 180px
		background lightblue
	}
	from {
		width 500px
	}
}

@keyframes searchBoxExpandFade {
	to {
		opacity 0
		width 0
		max-width 0
	}
	from {
		max-width 1000px
		width auto
		opacity 1
	}
}

@keyframes searchBoxExpandFadeBack {
	to {
		max-width 1000px
		width auto
		opacity 1
	}
	from {
		opacity 0
		width 0
		max-width 0
	}
}



/* header */
#main-header
	create-gradient-background(header-background-color)
	border-bottom 1px solid rgba(255, 255, 255, 0.2)

	> .center
		height 90px

	.logo
		@extend .offscreen
		width 114px
		height 26px
		background url('../img/temporary-logo.png') 0 0 no-repeat
		display block
		position absolute
		left gutter-width
		bottom 21px

#main-nav
	> ul
		position absolute
		right gutter-width
		bottom 21px

		> li
			display inline-block
			padding-left 47px
			position relative
			opacity 1
			max-width 1000px

			> a
				compat-important(color, menu-link-color)
				compat-important(text-transform, uppercase)
				compat-important(text-decoration, none)
				compat-important(font-weight, bold)

	button[type='submit']
		display none

	.submenu
		position absolute
		top 40px
		left -200px
		border-top 5px solid #404040
		background #fff
		padding (grid-spacing * .75) grid-spacing
		width 520px
		z-index 9999
		display none

		& > div:first-child
			border-right 1px dotted #d4dde4
			margin-right 0g

		.submenu-column
			min-height 90px
			width 225px
			display inline-block
			padding-right grid-spacing

		a
			font-size smaller-font-size
			padding 5px 0
			display block

		reverse-link-decoration()

		generate-arrow()
		&:before
			border-bottom-color #fff
			position absolute
			top -19px
			left 255px
			z-index 2

		&:after
			border-bottom-color #333
			position absolute
			top -24px
			left 255px
			z-index 1

	&.expand
		input
			vendorize(animation-name, searchBoxExpand)
			vendorize(animation-duration, 0.5s)
			vendorize(animation-delay, 0.6s)
			vendorize(animation-fill-mode, forwards)
			
		> ul > li:not(:last-child)
			vendorize(animation-name, searchBoxExpandFade)
			vendorize(animation-duration, 0.5s)
			vendorize(animation-delay, 0)
			vendorize(animation-fill-mode, forwards)

	
	> ul > li:not(:last-child)
		vendorize(animation-name, searchBoxExpandFadeBack)
		vendorize(animation-duration, 0.5s)
		vendorize(animation-delay, 3s)
		vendorize(animation-fill-mode, forwards)
	


.search-wrap
	background #fff
	padding 4px 8px
	border-radius 3px

	input
		background transparent
		border 0
		color menu-link-color
		text-transform uppercase
		font-weight bold
		width 180px
		compat-only(padding, 0)

		vendorize(animation-name, searchBoxExpandBack)
		vendorize(animation-duration, 0.5s)
		vendorize(animation-delay, 0)
		/* vendorize(animation-fill-mode, forwards) */

		&::-webkit-input-placeholder
			color text-color
			text-align right
		&::-moz-input-placeholder
			color text-color
			text-align right

	@media media-query-tablet

		input
			width 100px

/* main content area */
.wrap
	compat-only(max-width, none)
	compat-only(min-width, 0)
	compat-only(width, auto)
	compat-only(background, pink);
	
main
	padding-top first-content-top-padding











